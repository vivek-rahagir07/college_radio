rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for USERS collection
    match /users/{userId} {
      allow read: if true; // Allow reading user profiles
      allow write: if true; // allow registration/updates for now (in-situ auth)
    }
    
    // Rules for POSTS collection
    match /posts/{postId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Rules for STORIES collection
    match /stories/{storyId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Rules for EVENTS collection
    match /events/{eventId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Rules for COMMENTS sub-collection or root (handled contextually)
    match /{path=**}/comments/{commentId} {
      allow read, write: if true;
    }

    // Default deny for anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
